#:kivy 1.0.9

<PongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<PongBall>:
    size: 50, 50
    canvas:
        Color: 
            rgb: 1, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Color: 
            rgb: 1, 0, 1
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 100
        center_x: root.width / 2
        top: root.height / 2
        color: root.player1.color if root.player1.score > root.player2.score else root.player2.color
        text: str("Player 1 Wins!" if root.player1.score > root.player2.score else "Player 2 Wins!")

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        color: root.player1.color
        text: str(root.player1.score)
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        color: root.player2.color
        text: str(root.player2.score)
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        color: 1, 0, 0
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
        color: 0, 0, 1
